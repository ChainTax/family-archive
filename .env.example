# ─── App ───────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=FamilyArchive

# ─── Database (PostgreSQL) ──────────────────────────────
# 로컬 개발: postgresql://user:password@localhost:5432/family_archive
# 운영: Railway / Supabase / Neon 등
DATABASE_URL=postgresql://user:password@localhost:5432/family_archive

# ─── Auth (NextAuth.js) ─────────────────────────────────
# 생성: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# ─── Object Storage (S3-compatible) ────────────────────
# 로컬 개발: MinIO 또는 로컬 파일시스템 (LOCAL_UPLOAD=true 시 Storage 미사용)
STORAGE_PROVIDER=local          # local | s3 | r2
LOCAL_UPLOAD_DIR=./uploads      # STORAGE_PROVIDER=local 일 때만 사용

# S3 / Cloudflare R2
STORAGE_ENDPOINT=
STORAGE_REGION=auto
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_BUCKET=family-archive

# ─── Image Processing ──────────────────────────────────
IMAGE_MAX_WIDTH=2048            # 웹용 최대 긴변 (px)
IMAGE_THUMB_WIDTH=480           # 썸네일 긴변 (px)
IMAGE_QUALITY=85                # WebP/JPEG 품질 (1-100)
IMAGE_STRIP_EXIF=true           # GPS EXIF 제거 (기본 ON)

# ─── Admin Seed (Step 0 개발용) ───────────────────────
SEED_ADMIN_EMAIL=admin@family.local
SEED_ADMIN_PASSWORD=changeme123!
